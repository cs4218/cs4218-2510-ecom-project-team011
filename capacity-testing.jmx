          <JSR223Assertion guiclass="TestBeanGUI" testclass="JSR223Assertion" testname="Throughput Assertion">
            <stringProp name="cacheKey">true</stringProp>
            <stringProp name="filename"></stringProp>
            <stringProp name="parameters"></stringProp>
            <stringProp name="script">import java.util.concurrent.atomic.AtomicLong;

double minThroughput = 6000.0; // req/s
long warmupPeriod = 300000; // 5 min warmup
long checkInterval = 60000; // Check every 30 seconds

long currentTime = System.currentTimeMillis();

// Initialize
if (!props.containsKey(&quot;throughputTotal&quot;)) {
    synchronized(props) {
        if (!props.containsKey(&quot;throughputTotal&quot;)) {
            props.put(&quot;throughputTotal&quot;, new AtomicLong(0));
            props.put(&quot;throughputStartTime&quot;, new AtomicLong(currentTime));
            props.put(&quot;lastThroughputCheck&quot;, new AtomicLong(currentTime));
        }
    }
}

AtomicLong totalSamples = props.get(&quot;throughputTotal&quot;);
AtomicLong testStartTime = props.get(&quot;throughputStartTime&quot;);
AtomicLong lastCheck = props.get(&quot;lastThroughputCheck&quot;);

// Increment sample count
long total = totalSamples.incrementAndGet();

// Check threshold only after warmup and at intervals
long testRuntime = currentTime - testStartTime.get();
long timeSinceLastCheck = currentTime - lastCheck.get();

if (testRuntime &gt;= warmupPeriod &amp;&amp; timeSinceLastCheck &gt;= checkInterval) {
    // Update last check time
    lastCheck.set(currentTime);
    
    // Calculate average throughput since test start (after warmup)
    long effectiveRuntime = testRuntime - warmupPeriod;
    double throughput = (total * 1000.0) / effectiveRuntime;
    
    log.info(String.format(&quot;Current throughput: %.2f req/s (samples: %d, runtime: %d ms)&quot;, 
                          throughput, total, effectiveRuntime));
    
    if (throughput &lt; minThroughput) {
        String msg = String.format(&quot;THROUGHPUT DEGRADED: %.2f req/s &lt; %.2f req/s (samples: %d)&quot;, 
                                   throughput, minThroughput, total);
        log.error(&quot;*** &quot; + msg + &quot; ***&quot;);
        prev.setSuccessful(false);
        prev.setResponseMessage(msg);
        ctx.getEngine().stopTest(false);
    }
}</stringProp>
