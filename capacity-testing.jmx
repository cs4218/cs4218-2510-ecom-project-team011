          <JSR223Assertion guiclass="TestBeanGUI" testclass="JSR223Assertion" testname="Duration Assertion Flag Check" enabled="true">
            <stringProp name="cacheKey">true</stringProp>
            <stringProp name="filename"></stringProp>
            <stringProp name="parameters"></stringProp>
            <stringProp name="script">import java.util.concurrent.atomic.AtomicBoolean;

// Initialize stop flag
if (!props.containsKey(&quot;durationStopRequested&quot;)) {
    synchronized(props) {
        if (!props.containsKey(&quot;durationStopRequested&quot;)) {
            props.put(&quot;durationStopRequested&quot;, new AtomicBoolean(false));
        }
    }
}

AtomicBoolean stopRequested = props.get(&quot;durationStopRequested&quot;);

// Exit early if stop already requested
if (stopRequested.get()) {
    return;
}

// Only process if this sample actually failed
if (!prev.isSuccessful()) {
    String responseMessage = prev.getResponseMessage();
    
    // Check if failure was specifically due to Duration Assertion
    if (responseMessage != null &amp;&amp; responseMessage.contains(&quot;lasted too long&quot;)) {
        // Use compareAndSet to ensure only one thread triggers stop
        if (stopRequested.compareAndSet(false, true)) {
            log.error(&quot;*** DURATION ASSERTION FAILED: Response time exceeded threshold ***&quot;);
            log.error(&quot;*** STOPPING TEST ***&quot;);
            
            try {
                ctx.getEngine().stopTest(true);
            } catch (Exception e) {
                log.error(&quot;Failed to stop test: &quot; + e.getMessage());
            }
        }
    }
}</stringProp>
