          <JSR223Assertion guiclass="TestBeanGUI" testclass="JSR223Assertion" testname="Error Rate Assertion">
            <stringProp name="cacheKey">true</stringProp>
            <stringProp name="filename"></stringProp>
            <stringProp name="parameters"></stringProp>
            <stringProp name="script">import java.util.concurrent.atomic.AtomicLong;
import java.util.concurrent.ConcurrentLinkedQueue;

double maxErrorRate = 0.1;
long warmupPeriod = 10000; // 10 seconds in milliseconds
int windowSize = 2000; // Check last 2000 samples for faster detection

// Initialize counters
if (!props.containsKey(&quot;errorRateTotal&quot;)) {
    synchronized(props) {
        if (!props.containsKey(&quot;errorRateTotal&quot;)) {
            props.put(&quot;errorRateTotal&quot;, new AtomicLong(0));
            props.put(&quot;errorRateFailed&quot;, new AtomicLong(0));
            props.put(&quot;errorRateStartTime&quot;, new AtomicLong(System.currentTimeMillis()));
            props.put(&quot;errorWindow&quot;, new ConcurrentLinkedQueue());
        }
    }
}

AtomicLong totalCount = props.get(&quot;errorRateTotal&quot;);
AtomicLong failedCount = props.get(&quot;errorRateFailed&quot;);
AtomicLong startTime = props.get(&quot;errorRateStartTime&quot;);
ConcurrentLinkedQueue errorWindow = props.get(&quot;errorWindow&quot;);

long total = totalCount.incrementAndGet();
boolean isError = !prev.isSuccessful();

// Add to sliding window (1 = error, 0 = success)
errorWindow.add(isError ? 1 : 0);
// Keep window size
while (errorWindow.size() &gt; windowSize) {
    errorWindow.poll();
}

// Track global stats for logging
if (isError) {
    failedCount.incrementAndGet();
}

// Check after warmup
long runtime = System.currentTimeMillis() - startTime.get();
if (runtime &gt;= warmupPeriod &amp;&amp; total &gt; 100) {  // Need minimum samples
    // Calculate error rate from sliding window
    int windowErrors = 0;
    for (Integer val : errorWindow) {
        if (val != null &amp;&amp; val == 1) {
            windowErrors++;
        }
    }
    int windowTotal = errorWindow.size();
    double errorRate = windowTotal &gt; 0 ? (windowErrors / (double) windowTotal) * 100.0 : 0.0;
    
    // Log every 500 samples
    if (total % 500 == 0) {
        long globalFailed = failedCount.get();
        double globalErrorRate = (globalFailed / (double) total) * 100.0;
        log.info(String.format(&quot;Window error rate: %.3f%% (%d/%d), Global: %.3f%% (%d/%d)&quot;, 
                              errorRate, windowErrors, windowTotal, globalErrorRate, globalFailed, total));
    }
    
    // Check threshold on every sample for fast detection
    if (errorRate &gt; maxErrorRate) {
        String msg = String.format(&quot;ERROR RATE EXCEEDED: %.3f%% &gt; %.2f%% (%d errors in %d sample window)&quot;, 
                                   errorRate, maxErrorRate, windowErrors, windowTotal);
        log.error(&quot;*** &quot; + msg + &quot; ***&quot;);
        prev.setSuccessful(false);
        prev.setResponseMessage(msg);
        ctx.getEngine().stopTest(false);
    }
}</stringProp>
            <stringProp name="scriptLanguage">groovy</stringProp>
          </JSR223Assertion>
